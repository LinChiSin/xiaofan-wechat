<import src="/components/templates.wxml" />
<block wx:if="{{user}}">
  <template is="profile" data="{{user}}" />
  <view class="section">
    <view class="list">
      <template is="list_item" data="{{...direct_messages, badge: notis.direct_messages}}" />
      <template wx:if="{{notis.friend_requests}}" is="list_item" data="{{...friend_requests, badge: notis.friend_requests}}" />
    </view>
  </view>
  <view class="section">
    <view class="list">
      <template is="list_item" data="{{...change_profile,  page: '../change-profile/change-profile'}}" />
      <template is="list_item" data="{{...logout}}" />
    </view>
  </view>
  <view class="footer meta" catchtap="tapLink" data-link="https://github.com/fanfoujs/fanfou-weapp">Xiaofan on Github</view>
  <template is="notibar" data="{{notis}}" />
</block>